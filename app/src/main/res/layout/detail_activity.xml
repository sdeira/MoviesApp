<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/detail_movie_image"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"/>


    <TextView
        android:id="@+id/detail_movie_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="The walking dead"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/detail_movie_air_datee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="2017-02-03"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        />

    <TextView
        android:id="@+id/detail_movie_overview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Es una serie apocaliptica donde reinan los muertos vivos, y la gente esta desesperada por sobrevivir. Al limite de la supervivencia."
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/detail_movie_vote_average"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        tools:text="Votos: 9.3"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/detail_movie_related_movies_recycle_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">

    </android.support.v7.widget.RecyclerView>

    </LinearLayout>

</ScrollView>