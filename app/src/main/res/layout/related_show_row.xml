<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/related_show_image"
        android:layout_width="150dp"
        android:layout_height="150dp" />

    <TextView
        android:id="@+id/related_show_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/related_show_image"
        android:layout_alignRight="@+id/related_show_image"
        android:layout_alignEnd="@+id/related_show_image"
        android:layout_alignStart="@+id/related_show_image"
        android:layout_alignLeft="@+id/related_show_image"
        tools:text="The Walking Dead"
        android:layout_marginTop="3dp"
        android:gravity="center"
        android:maxLines="1"
        android:ellipsize="end"/>
</RelativeLayout>